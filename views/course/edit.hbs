<h1>Редактирование курса</h1>

<form action='/courses/update' method="POST">

  <input type="hidden" name="_csrf" value="{{csrfToken}}">

  <input type="hidden" name="id" value={{course.id}}>

  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

  <div class="input-field">
    <textarea name="description" id="textarea1" class="materialize-textarea" required>{{course.description}}</textarea>
    <label for="textarea1">Описание</label>
    <span class="helper-text" data-error="Введите описание"></span>
  </div>

  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" required min="2" value="{{course.price}}">
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>
  </div>

  <button type="submit" class="btn btn-primary">Редактировать</button>
</form>

<form action='/courses/remove' method="POST">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <input type="hidden" name="id" value={{course.id}}>
  <button type="submit" class="btn red">Удалить кур</button>
</form>